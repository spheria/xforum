{{> header}}

<div class="container">
  <div class="panel">
    <div class="panel-body">
      {{#if messages.success}}
      <div role="alert" class="alert alert-success">
        {{#each messages.success}}
        <div>{{msg}}</div>
        {{/each}}
      </div>
      {{/if}}
      {{#if messages.error}}
      <div role="alert" class="alert alert-danger">
        {{#each messages.error}}
        <div>{{msg}}</div>
        {{/each}}
      </div>
      {{/if}}
    </div>
  </div>
  <div class="row">
    <div class="jumbotron">
      <h3>Posts</h3>
    </div>
    <div class="col-lg-12 col-md-12 col-sm-12">
      <div class="bs-component">
        {{#each posts}}
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">
              <a><h3>{{this.title}}</h3> </a>
            </h3>
          </div>
          <div class="panel-body">
            <cite title="" class="text-info">{{this.body}}</cite>
            <p class="lead">{{{this.html}}}</p>
            <blockquote class=" blockquote-reverse">
              <small>
                <cite class=" blockquote-reverse">{{this.created_at}}</cite>
              </small>
            </blockquote>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-lg-6">
    <a class="btn btn-primary pull-right" href="/account/posts/new">New Post</a>
    <a class="btn btn-primary pull-right" href="/categories/new">New Category</a>
    <a class="btn btn-primary pull-right" href="/pages/new">New Page</a>
  </div>
</div>

{{> footer}}
