<div class="container">
  <div class="panel">
    <div class="panel-body">
      {{#if messages.success}}
        <div role="alert" class="alert alert-success">
          {{#each messages.success}}
            <div>{{msg}}</div>
          {{/each}}
        </div>
      {{/if}}
      {{#if messages.error}}
        <div role="alert" class="alert alert-danger">
          {{#each messages.error}}
            <div>{{msg}}</div>
          {{/each}}
        </div>
      {{/if}}
    </div>
    <div class="row">
      <div class="col-lg-6">
      <a class="btn btn-primary pull-right" href="/account/posts/new">New Post</a>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-6">
        <div class="bs-component">
          <div class="panel panel-default">
            <div class="panel-heading">
              <h3 class="panel-title">Posts</h3>
            </div>
            <div class="panel-body">
              {{#each posts}}
              <blockquote>
                <a>{{this.title}} </a>
                <cite title="" class="text-info">{{this.body}}</cite>
                <small>
                  <cite>{{this.created_at}}</cite>
                </small>
              </blockquote>
              {{/each}}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
